# Environment Configuration
# Note: Vite exposes variables that start with VITE_ to the client side

# Development server configuration
VITE_PORT=5173
VITE_HOST=localhost

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# PubChem API Configuration
VITE_PUBCHEM_BASE_URL=https://pubchem.ncbi.nlm.nih.gov/rest/pug

# Application Configuration
VITE_APP_NAME=Lab System Manager
VITE_APP_VERSION=1.0.0

# GitHub Pages Configuration (for deployment)
VITE_GITHUB_PAGES_BASE_URL=https://ShakoBatiashvili.github.io/delete-me

# Default Language
VITE_DEFAULT_LANGUAGE=en

# Environment
NODE_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# Security
VITE_SECURE_MODE=false
